{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "types": ["node"],
        "declaration": true,
        "sourceMap": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true
    },
    "exclude": ["node_modules", "dist"]
} 